<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/iv_homepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                />
            <ImageView
                android:id="@+id/iv_imdb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                />
            <ImageView
                android:id="@+id/iv_tmdb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                />

        </LinearLayout>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical_det"
            android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
            android:layout_marginRight="@dimen/cardMarginHorizontal_det"
            android:layout_marginTop="@dimen/cardMarginVertical_det"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genres:"
                    android:textSize="11sp" />
                
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"

                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tag_det_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#fff"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:text="Action"/>
                        <TextView
                            android:id="@+id/tag_det_comedy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:text="Comedy"/>
                        <TextView
                            android:id="@+id/tag_det_romance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:text="Romance"/>
                        <TextView
                            android:id="@+id/tag_det_drama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:text="Drama"/>
                        <TextView
                            android:id="@+id/tag_det_fantasy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:text="Fantasy"/>
                        <TextView
                            android:id="@+id/tag_det_sience_fiction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:text="Si-Fi"/>
                        <TextView
                            android:id="@+id/tag_det_adventure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginLeft="2dp"
                            android:textColor="#fff"
                            android:background="@drawable/rounded_corners"
                            android:layout_marginBottom="3dp"
                            android:visibility="gone"
                            android:fontFamily="sans-serif-light"
                            android:text="Adventure"/>
                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical_det"
                android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
                android:layout_marginRight="@dimen/cardMarginHorizontal_det"
                android:layout_marginTop="@dimen/cardMarginVertical_det"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_det_year"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="152 min"
                        android:textSize="18sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/cardMarginVertical_det"
                android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
                android:layout_marginRight="@dimen/cardMarginHorizontal_det"
                android:layout_marginTop="@dimen/cardMarginVertical_det"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_det_rating"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="9.2"
                        android:textSize="18sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical_det"
                android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
                android:layout_marginRight="@dimen/cardMarginHorizontal_det"
                android:layout_marginTop="@dimen/cardMarginVertical_det"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        />

                    <TextView
                        android:id="@+id/tv_det_time"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="152 min"
                        android:textSize="18sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical_det"
            android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
            android:layout_marginRight="@dimen/cardMarginHorizontal_det"
            android:layout_marginTop="@dimen/cardMarginVertical_det"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tagline:"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_det_tagline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Why so serious?"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardMarginVertical_det"
            android:layout_marginLeft="@dimen/cardMarginHorizontal_det"
            android:layout_marginRight="@dimen/cardMarginHorizontal_det"
            android:layout_marginTop="@dimen/cardMarginVertical_det"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview:"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_det_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Why so serious?"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>